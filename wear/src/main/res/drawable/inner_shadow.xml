<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- background color -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#11000000" />
        </shape>
    </item>
    <!-- over left shadow -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="180"
                android:centerColor="#00eeeeee"
                android:centerX="0.9"
                android:endColor="#22000000"
                android:startColor="#00eeeeee" />
        </shape>
    </item>
    <!-- over right shadow -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="360"
                android:centerColor="#00eeeeee"
                android:centerX="0.9"
                android:endColor="#22000000"
                android:startColor="#00eeeeee" />
        </shape>
    </item>
    <!-- over top shadow -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="-90"
                android:centerColor="#00eeeeee"
                android:centerY="0.9"
                android:endColor="#00eeeeee"
                android:startColor="#33000000"
                android:type="linear" />
        </shape>
    </item>
</layer-list>