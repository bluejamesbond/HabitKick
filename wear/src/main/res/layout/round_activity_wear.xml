<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".WearActivity"
    tools:deviceIds="wear_round">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="25">

        <com.fiftyeightmorris.nailbiter.helper.ProximaNovaSemiBold
            android:id="@+id/today_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/today_value"
            android:textColor="@color/white"
            android:textSize="@dimen/today_value"
            android:textStyle="bold" />

        <com.fiftyeightmorris.nailbiter.helper.ProximaNovaBold
            android:id="@+id/today_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:gravity="center_vertical"
            android:text="@string/today_label"
            android:textAllCaps="true"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/today_label"
            android:textStyle="bold" />

        <com.fiftyeightmorris.nailbiter.helper.Fontello
            android:id="@+id/textView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/rnd_button_translucent_white"
            android:gravity="center"
            android:text="@string/left_label"
            android:textSize="8dp"
            android:layout_marginEnd="13dp"
            android:layout_alignBottom="@+id/today_value"
            android:layout_toStartOf="@+id/today_value" />

        <com.fiftyeightmorris.nailbiter.helper.Fontello
            android:id="@+id/textView2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:textSize="8dp"
            android:background="@drawable/rnd_button_translucent_white"
            android:gravity="center"
            android:text="@string/right_label"
            android:layout_marginStart="13dp"
            android:layout_alignTop="@+id/textView"
            android:layout_toEndOf="@+id/today_value" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:layout_weight="10"
        android:background="@drawable/bg_center"
        android:weightSum="100">

        <com.fiftyeightmorris.nailbiter.helper.Fontello
            android:id="@+id/calibrateButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/monitorButton"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rnd_button_theme"
            android:gravity="center"
            android:text="@string/calibrate"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold" />

        <com.fiftyeightmorris.nailbiter.helper.ProximaNovaBold
            android:id="@+id/goal_label"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="2dp"
            android:layout_weight="194.59"
            android:background="@drawable/rnd_button_theme"
            android:gravity="center_vertical|left"
            android:paddingLeft="15dp"
            android:text="@string/monitor"
            android:textAllCaps="true"
            android:textSize="21dp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="70"
        android:background="#FFFFFF"></RelativeLayout>

</LinearLayout>
